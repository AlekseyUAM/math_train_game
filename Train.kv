# Custom button
<CustButton@Button>:
    font_size: 32

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Начать тренировку'
            font_size: 32
            on_press: root.manager.current = 'game'
        Button:
            text: 'Выход'
            font_size: 32
            on_press: quit()

<GameScreen>:
    CalcGridLayout:
        id: calculator
        rows: 6
        padding: 10
        spacing: 10

        BoxLayout:
            Label:
                id: answer_label
                font_size: 32

        BoxLayout:
            Label:
                id: question_label
                font_size: 32
                size_hint: (1, 0.6)
            TextInput:
                id: entry
                font_size: 31
                multiline: False
                halign: 'center'
                size_hint: (1, 0.6)

        BoxLayout:
            spacing: 10
            CustButton:
                text: "7"
                on_press: entry.text += self.text
            CustButton:
                text: "8"
                on_press: entry.text += self.text
            CustButton:
                text: "9"
                on_press: entry.text += self.text
            CustButton:
                text: "Удалить"
                on_press: entry.text = entry.text[:-1]

        BoxLayout:
            spacing: 10
            CustButton:
                text: "4"
                on_press: entry.text += self.text
            CustButton:
                text: "5"
                on_press: entry.text += self.text
            CustButton:
                text: "6"
                on_press: entry.text += self.text
            CustButton:
                text: "Очистить"
                on_press: entry.text = ''

        BoxLayout:
            spacing: 10
            CustButton:
                text: "1"
                on_press: entry.text += self.text
            CustButton:
                text: "2"
                on_press: entry.text += self.text
            CustButton:
                text: "3"
                on_press: entry.text += self.text
            CustButton:
                text: "0"
                on_press: entry.text += self.text

        BoxLayout:
            spacing: 10
            Button:
                text: 'Проверить'
                font_size: 32
                on_press: root.check_answer(entry.text)
            Button:
                text: 'Назад'
                font_size: 32
                on_press: root.manager.current = 'menu'

